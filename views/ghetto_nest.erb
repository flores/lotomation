<div class="row">
  <div class="col-lg-12">
    <font size="100px"><center><span class="temp"><%= checkpoint_current_temperature('bedpi') %></span> F</center></font>
  </div>
</div>

<div class="row" id='control'>
    <div class="col-lg-12 btn-group">
      <center>
        <button type="button" style="width: 100%" class="btn btn-lg <%= thermostat_get_state == 'off' ? 'btn-danger' : 'btn-success' %> dropdown-toggle" data-toggle="dropdown">
          <%= thermostat_get_state == 'off' ? 'heater and a/c' : thermostat_get_state %> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><a href="/thermostat/air-conditioner">air-conditioner</a></li>
          <li><a href="/thermostat/heater">heater</a></li>
          <li><a href="/thermostat/off">off</a></li>
        </ul>
      </center>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    var interval = setInterval("updatetemp()", 500);

  });

  function updatetemp() {
    $(".temp").load('/temperature/bedpi');
    console.log('updated');
  };
</script>
